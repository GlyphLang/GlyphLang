{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "GlyphX",
  "scopeName": "source.glyphx",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#route-definition" },
    { "include": "#type-definition" },
    { "include": "#variable-declaration" },
    { "include": "#return-statement" },
    { "include": "#middleware" },
    { "include": "#injection" },
    { "include": "#validation" },
    { "include": "#expects" },
    { "include": "#event-handler" },
    { "include": "#cron-task" },
    { "include": "#command-def" },
    { "include": "#queue-worker" },
    { "include": "#function-def" },
    { "include": "#keywords" },
    { "include": "#http-methods" },
    { "include": "#types" },
    { "include": "#booleans" },
    { "include": "#operators" },
    { "include": "#function-call" },
    { "include": "#field-access" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.glyphx",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.glyphx",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.glyphx",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.glyphx",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.glyphx",
          "match": "\\b\\d+\\.\\d*\\b"
        },
        {
          "name": "constant.numeric.integer.glyphx",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "route-definition": {
      "match": "^\\s*(route)\\s+(GET|POST|PUT|DELETE|PATCH|OPTIONS|HEAD|ws)\\s+(/[a-zA-Z0-9_/:*-]*)",
      "captures": {
        "1": { "name": "keyword.other.route.glyphx" },
        "2": { "name": "keyword.other.http-method.glyphx" },
        "3": { "name": "string.other.path.glyphx" }
      }
    },
    "type-definition": {
      "match": "^\\s*(type)\\s+([A-Z][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.other.type.glyphx" },
        "2": { "name": "entity.name.type.glyphx" }
      }
    },
    "variable-declaration": {
      "match": "\\b(let)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.other.let.glyphx" },
        "2": { "name": "variable.other.glyphx" }
      }
    },
    "return-statement": {
      "match": "\\b(return)\\b",
      "name": "keyword.control.return.glyphx"
    },
    "middleware": {
      "match": "^\\s*(middleware)\\s+(\\w+)",
      "captures": {
        "1": { "name": "keyword.other.middleware.glyphx" },
        "2": { "name": "entity.name.function.middleware.glyphx" }
      }
    },
    "injection": {
      "match": "^\\s*(use)\\s+(\\w+)",
      "captures": {
        "1": { "name": "keyword.other.use.glyphx" },
        "2": { "name": "variable.other.injection.glyphx" }
      }
    },
    "validation": {
      "match": "^\\s*(validate)\\s+(\\w+)",
      "captures": {
        "1": { "name": "keyword.other.validate.glyphx" },
        "2": { "name": "entity.name.function.validation.glyphx" }
      }
    },
    "expects": {
      "match": "^\\s*(expects)\\b",
      "name": "keyword.other.expects.glyphx"
    },
    "event-handler": {
      "match": "^\\s*(handle)\\s+(\"[^\"]*\")",
      "captures": {
        "1": { "name": "keyword.other.handle.glyphx" },
        "2": { "name": "string.quoted.double.event-type.glyphx" }
      }
    },
    "cron-task": {
      "match": "^\\s*(cron)\\s+(\"[^\"]*\")",
      "captures": {
        "1": { "name": "keyword.other.cron.glyphx" },
        "2": { "name": "string.quoted.double.schedule.glyphx" }
      }
    },
    "command-def": {
      "match": "^\\s*(command)\\s+(\\w+)",
      "captures": {
        "1": { "name": "keyword.other.command.glyphx" },
        "2": { "name": "entity.name.function.command.glyphx" }
      }
    },
    "queue-worker": {
      "match": "^\\s*(queue)\\s+(\"[^\"]*\")",
      "captures": {
        "1": { "name": "keyword.other.queue.glyphx" },
        "2": { "name": "string.quoted.double.queue-name.glyphx" }
      }
    },
    "function-def": {
      "match": "^\\s*(func)\\s+(\\w+)",
      "captures": {
        "1": { "name": "keyword.other.func.glyphx" },
        "2": { "name": "entity.name.function.glyphx" }
      }
    },
    "keywords": {
      "match": "\\b(if|else|while|for|in|switch|case|default|on|connect|message|disconnect|async|await|import|from|const)\\b",
      "name": "keyword.control.glyphx"
    },
    "http-methods": {
      "match": "\\b(GET|POST|PUT|DELETE|PATCH|OPTIONS|HEAD|ws)\\b",
      "name": "keyword.other.http-method.glyphx"
    },
    "types": {
      "patterns": [
        {
          "match": "\\b(int|str|string|bool|float|timestamp|List|Map|object|Database)\\b",
          "name": "support.type.builtin.glyphx"
        },
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
          "name": "entity.name.type.glyphx"
        }
      ]
    },
    "booleans": {
      "match": "\\b(true|false|null)\\b",
      "name": "constant.language.glyphx"
    },
    "operators": {
      "patterns": [
        {
          "match": "(==|!=|<=|>=|&&|\\|\\||\\|>)",
          "name": "keyword.operator.comparison.glyphx"
        },
        {
          "match": "[+\\-*/%]",
          "name": "keyword.operator.arithmetic.glyphx"
        },
        {
          "match": "!",
          "name": "keyword.operator.required.glyphx"
        }
      ]
    },
    "function-call": {
      "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.call.glyphx" }
      }
    },
    "field-access": {
      "match": "\\.(\\w+)",
      "captures": {
        "1": { "name": "variable.other.property.glyphx" }
      }
    },
    "identifiers": {
      "match": "\\b[a-z_][a-zA-Z0-9_]*\\b",
      "name": "variable.other.glyphx"
    }
  }
}
