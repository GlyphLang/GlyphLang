{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Glyph",
  "scopeName": "source.glyph",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#route-definition" },
    { "include": "#type-definition" },
    { "include": "#variable-declaration" },
    { "include": "#return-statement" },
    { "include": "#middleware" },
    { "include": "#injection" },
    { "include": "#validation" },
    { "include": "#event-handler" },
    { "include": "#cron-task" },
    { "include": "#command-def" },
    { "include": "#queue-worker" },
    { "include": "#function-def" },
    { "include": "#keywords" },
    { "include": "#http-methods" },
    { "include": "#types" },
    { "include": "#booleans" },
    { "include": "#operators" },
    { "include": "#function-call" },
    { "include": "#field-access" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.glyph",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.glyph",
          "match": "//.*$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.glyph",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.glyph",
          "match": "\\\\."
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.glyph",
          "match": "\\b\\d+\\.\\d*\\b"
        },
        {
          "name": "constant.numeric.integer.glyph",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "route-definition": {
      "match": "^\\s*(@)\\s*(route\\b|GET\\b|POST\\b|PUT\\b|DELETE\\b|PATCH\\b|OPTIONS\\b|HEAD\\b|ws\\b)?",
      "captures": {
        "1": { "name": "keyword.operator.route.glyph" },
        "2": { "name": "keyword.other.http-method.glyph" }
      }
    },
    "type-definition": {
      "match": "^\\s*(:)\\s*([A-Z][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.operator.type.glyph" },
        "2": { "name": "entity.name.type.glyph" }
      }
    },
    "variable-declaration": {
      "match": "(\\$)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": { "name": "keyword.operator.variable.glyph" },
        "2": { "name": "variable.other.glyph" }
      }
    },
    "return-statement": {
      "match": "^\\s*(>)",
      "captures": {
        "1": { "name": "keyword.operator.return.glyph" }
      }
    },
    "middleware": {
      "match": "^\\s*(\\+)\\s*(\\w+)",
      "captures": {
        "1": { "name": "keyword.operator.middleware.glyph" },
        "2": { "name": "entity.name.function.middleware.glyph" }
      }
    },
    "injection": {
      "match": "^\\s*(%)\\s*(\\w+)",
      "captures": {
        "1": { "name": "keyword.operator.injection.glyph" },
        "2": { "name": "variable.other.injection.glyph" }
      }
    },
    "validation": {
      "match": "^\\s*(\\?)\\s*(\\w+)",
      "captures": {
        "1": { "name": "keyword.operator.validation.glyph" },
        "2": { "name": "entity.name.function.validation.glyph" }
      }
    },
    "event-handler": {
      "match": "^\\s*(~)\\s*(event\\b|handle\\b)?",
      "captures": {
        "1": { "name": "keyword.operator.event.glyph" },
        "2": { "name": "keyword.other.event.glyph" }
      }
    },
    "cron-task": {
      "match": "^\\s*(\\*)\\s*(cron\\b)?",
      "captures": {
        "1": { "name": "keyword.operator.cron.glyph" },
        "2": { "name": "keyword.other.cron.glyph" }
      }
    },
    "command-def": {
      "match": "^\\s*(!)\\s*(command\\b)?\\s*(\\w+)?",
      "captures": {
        "1": { "name": "keyword.operator.command.glyph" },
        "2": { "name": "keyword.other.command.glyph" },
        "3": { "name": "entity.name.function.command.glyph" }
      }
    },
    "queue-worker": {
      "match": "^\\s*(&)\\s*(queue\\b)?",
      "captures": {
        "1": { "name": "keyword.operator.queue.glyph" },
        "2": { "name": "keyword.other.queue.glyph" }
      }
    },
    "function-def": {
      "match": "^\\s*(=)\\s*(\\w+)",
      "captures": {
        "1": { "name": "keyword.operator.function.glyph" },
        "2": { "name": "entity.name.function.glyph" }
      }
    },
    "keywords": {
      "match": "\\b(if|else|while|for|in|switch|case|default|fn|return|on|connect|message|disconnect|const)\\b",
      "name": "keyword.control.glyph"
    },
    "http-methods": {
      "match": "\\b(GET|POST|PUT|DELETE|PATCH|OPTIONS|HEAD|ws)\\b",
      "name": "keyword.other.http-method.glyph"
    },
    "types": {
      "patterns": [
        {
          "match": "\\b(int|str|string|bool|float|timestamp|List|Map|object|Database)\\b",
          "name": "support.type.builtin.glyph"
        },
        {
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b",
          "name": "entity.name.type.glyph"
        }
      ]
    },
    "booleans": {
      "match": "\\b(true|false|null)\\b",
      "name": "constant.language.glyph"
    },
    "operators": {
      "patterns": [
        {
          "match": "(==|!=|<=|>=|&&|\\|\\||\\|>)",
          "name": "keyword.operator.comparison.glyph"
        },
        {
          "match": "[+\\-*/%]",
          "name": "keyword.operator.arithmetic.glyph"
        },
        {
          "match": "!",
          "name": "keyword.operator.required.glyph"
        }
      ]
    },
    "function-call": {
      "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*\\(",
      "captures": {
        "1": { "name": "entity.name.function.call.glyph" }
      }
    },
    "field-access": {
      "match": "\\.(\\w+)",
      "captures": {
        "1": { "name": "variable.other.property.glyph" }
      }
    },
    "identifiers": {
      "match": "\\b[a-z_][a-zA-Z0-9_]*\\b",
      "name": "variable.other.glyph"
    }
  }
}
